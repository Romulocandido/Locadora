@model ProjetoFinal.SistemaLocadora.Dominio.Acervo

@{
    ViewBag.Title = "Acervo";
}

<h2>Acervo</h2>

@using (Html.BeginForm("Cadastrar", "Acervos", FormMethod.Post, new { @role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Produto)
        @Html.DropDownListFor(model => model.Produto.Id,(SelectList)ViewBag.produtos, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Produto)
    </div>
    <div class="form-group">
        @Html.Label("Quantidade")
        @Html.TextBox("Quantidade",1)
    </div>

    <button type="Submit" class="btn btn-default">Inserir</button>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
