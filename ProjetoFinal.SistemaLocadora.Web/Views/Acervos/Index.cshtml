@model IEnumerable<ProjetoFinal.SistemaLocadora.Dominio.ProdutoExibir>

@{
    ViewBag.Title = "Acervo";
}

<h2>Acervo</h2>

<p class="table table-hover">
    @Html.ActionLink("Inserir", "Cadastrar")  |  
    @Html.ActionLink("VIsualizar Acervos", "Index")  |
    @Html.ActionLink("Visualizar Acervos Danificados", "DanosView")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        @if (ViewBag.motivo == "S")
        {

            <th>
                @Html.DisplayNameFor(model => model.Motivo)
            </th>
        }
        <th>
            @Html.DisplayNameFor(model => model.Quantidade)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            @if (ViewBag.motivo == "S")
            {
                <td>
                    @Html.DisplayFor(modelitem => item.Motivo)
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @Html.ActionLink("Informar perda/dano", "Dano", new { id = item.id })
            </td>
        </tr>
    }

</table>
